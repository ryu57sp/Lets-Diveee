<!DOCTYPE html>
<html>
  <head>
    <title>LetsDiveee</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" href="/">
            </span>
            <div class="logo">Let's Diveee!!!</div>
          </a>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "About", about_path, class:"fas fa-camera nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "マイページ", user_path(current_user.id), class:"fas fa-user nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "新規投稿", new_dive_path, class:"fas fa-plus-square nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "投稿一覧", dives_path, class:"fas fa-list nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-light"  %>
                </li>
              <% else %>
                <li>
                  <%= link_to "About", about_path, class:"fas fa-camera nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "投稿一覧", dives_path, class:"fas fa-list nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "新規登録", new_user_registration_path, class:"fas fa-user-plus nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "ログイン", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light" %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
