<div class="scroll-list jscroll">
  <div class="container">
    <div class="col-md-15">
      <% notifications = @notifications.includes(:dive).where.not(visitor_id: current_user.id) %>
      <% if notifications.exists? %>
        <%= render notifications %>
      <% else %>
        <p class="mt-3">通知はありません。</p>
      <% end %>
    </div>
  </div>
  <%= paginate @notifications %>
</div>