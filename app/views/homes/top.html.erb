<%= image_tag 'top.jpg', class: "top-image" %>

<h1 class="text-center mt-5 mr-5">New Adventures🤿</h1>

<div class="box container col-md-6">
<div class="card-list-container pt-3 row">
  <% @dives.each do |dive| %>
    <div class="card mr-2 mt-4 shadow-lg">
      <%= link_to dive_path(dive) do %>
        <%= attachment_image_tag dive, :image, :fill, 300, 230 ,class:"card-img-top py-2 px-2";%>
      <% end %>
      <div class="card-body">
      <div class="text-center card-title"><%= dive.title %></div>
      </div>
    </div>
  <% end %>
</div>
</div>

<div class="text-right mt-3 mb-3 mr-5">
  <%=link_to "See All Adventures🐬 >" ,dives_path, class:"btn btn-primary" %>
</div>