<h1 class="all_rank text-center mt-5 mb-5">いいねランキング ベスト３</h1>

  <div class="container mb-3">
    <div class="row">
      <div class="col-md-12">

      <% @all_ranks.each.with_index(1) do |dive, i| %>

      <div class="text-center mr-2 mt-3">
        <% if i == 1 %>
        <span class="text-center text-dark"><i class="fas fa-award text-warning"></i>第１位・ ❤️<%= dive.favorites.count %></span></br>
        <div class="line">
          【<%= dive.title %>】
        </div>
        <div class="rank">
          <%= link_to dive_path(dive) do %>
            <%= attachment_image_tag dive, :image, :fill, 300, 230 ,class:"card-img-top py-2 px-2";%>
          <% end %>
        </div>
        <% elsif i  == 2 %>
        <span class="text-center text-dark"><i class="fas fa-award text-warning"></i>第２位・ ❤️<%= dive.favorites.count %></span></br>
        <div class="line">
          【<%= dive.title %>】
        </div>
        <div class="rank">
          <%= link_to dive_path(dive) do %>
            <%= attachment_image_tag dive, :image, :fill, 300, 230 ,class:"card-img-top py-2 px-2";%>
          <% end %>
        </div>
        <% elsif i  == 3 %>
        <span class="text-center text-dark"><i class="fas fa-award text-warning"></i>第３位・ ❤️<%= dive.favorites.count %></span></br>
        <div class="line">
          【<%= dive.title %>】
        </div>
        <div class="rank">
          <%= link_to dive_path(dive) do %>
            <%= attachment_image_tag dive, :image, :fill, 300, 230 ,class:"card-img-top py-2 px-2";%>
          <% end %>
        </div>
          <% end %>
      </div>

      <% end %>

    </div>
  </div>
</div>