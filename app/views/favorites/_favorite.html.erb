<% if @dive.user.is_deleted == false %>

  <% if user_signed_in? %>
    <% if dive.favorited_by?(current_user) %>
      <p>
        <%= link_to dive_favorites_path(dive.id), class: "text-decoration-none like-label", method: :delete, remote: true do %>
          <i class="fa fa-heart like-btn mr-1"></i><%= dive.favorites.count %>
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to dive_favorites_path(dive.id), class: "text-decoration-none like-label", method: :post, remote: true do %>
          <i class="fa fa-heart unlike-btn mr-1"></i><%= dive.favorites.count %>
        <% end %>
      </p>
    <% end %>
  <% end %>

<% end %>